{
  "name": "Polish Football Network",
  "short_name": "PFN",
  "description": "Interactive network visualization of Polish football clubs and their connections",
  "version": "1.0.0",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "any",
  "theme_color": "#1976d2",
  "background_color": "#ffffff",
  "lang": "en",
  "dir": "ltr",
  "categories": ["sports", "visualization", "education"],
  "icons": [
    {
      "src": "/assets/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/icons/maskable-icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/assets/icons/maskable-icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/assets/screenshots/desktop-graph.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Graph visualization on desktop"
    },
    {
      "src": "/assets/screenshots/mobile-graph.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Graph visualization on mobile"
    },
    {
      "src": "/assets/screenshots/club-details.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Club details panel"
    }
  ],
  "shortcuts": [
    {
      "name": "View Graph",
      "short_name": "Graph",
      "description": "Open the main graph visualization",
      "url": "/graph",
      "icons": [
        {
          "src": "/assets/icons/shortcut-graph.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Search Clubs",
      "short_name": "Search",
      "description": "Search for football clubs",
      "url": "/search",
      "icons": [
        {
          "src": "/assets/icons/shortcut-search.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Browse Connections",
      "short_name": "Connections",
      "description": "Browse club connections",
      "url": "/connections",
      "icons": [
        {
          "src": "/assets/icons/shortcut-connections.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+pfn",
      "url": "/?action=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],
  "handle_links": "preferred",
  "id": "polish-football-network",
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ]
}
